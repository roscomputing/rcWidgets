<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{htmlWebpackPlugin.options.title}}</title>
    {{#if htmlWebpackPlugin.options.requireScript}}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.3.6/require.min.js"></script>
    {{/if}}
    {{#if htmlWebpackPlugin.options.cdnScript}}
        <script type="text/javascript" src="{{htmlWebpackPlugin.options.cdnScript}}"></script>
    {{/if}}
</head>
<body>
<header>
    <h1>{{htmlWebpackPlugin.options.title}}</h1>
</header>
<main class="theme-dark">
    <div class="container"></div>
    <button id="sb">CALENDAR</button>
    {{#if htmlWebpackPlugin.options.requireScript}}
        <script>
            require(['{{htmlWebpackPlugin.options.requireScript}}'], function (rcCalendar) {
                document.getElementById('sb').addEventListener('click', function (e) {
                    var baseDays = [
                        {
                            DayId: 0,
                            IsWorking:  false,
                        } , {
                            DayId: 1,
                            IsWorking: true,
                            StartWorkingTime: {
                                Hour: 9,
                                Minutes: 0
                            },
                            EndWorkingTime: {
                                Hour: 18,
                                Minutes: 0
                            }
                        }, {
                            DayId:2,
                            IsWorking: true,
                            StartWorkingTime: {
                                Hour: 9,
                                Minutes: 0
                            },
                            EndWorkingTime: {
                                Hour: 18,
                                Minutes: 0
                            }
                        }, {
                            DayId:3,
                            IsWorking: true,
                            StartWorkingTime: {
                                Hour: 9,
                                Minutes: 0
                            },
                            EndWorkingTime: {
                                Hour: 18,
                                Minutes: 0
                            }
                        }, {
                            DayId:4,

                            IsWorking: true,
                            StartWorkingTime: {
                                Hour: 9,
                                Minutes: 0
                            },
                            EndWorkingTime: {
                                Hour: 18,
                                Minutes: 0
                            }
                        }, {
                            DayId:5,
                            IsWorking: true,
                            StartWorkingTime: {
                                Hour: 10,
                                Minutes: 0
                            },
                            EndWorkingTime: {
                                Hour: 17,
                                Minutes: 0
                            }
                        }, {
                            DayId:6,
                            IsWorking: false
                        }
                    ];

                    var regulations = {
                        BaseDays: baseDays,
                        SpecialDays: [
                            {
                                Date: '2019-06-12',
                                IsWorking: false,
                                StartWorkingTime: {
                                    Hour: 12,
                                    Minutes: 0
                                },
                                EndWorkingTime: {
                                    Hour: 14,
                                    Minutes: 0
                                }
                            }
                        ]
                    };

                    rcCalendar({
                        selector: '.container',
                        pageX: e.pageX,
                        pageY: e.pageY,
                        type: 1,
                        //fromLabel: 'ничего',
                        //toLabel: 'ничего 2',
                        minDate: '2019-06-01',
                        maxDate: '2019-06-10',
                        regulations: regulations
                    }, function(ids, values) {
                        console.log(ids, values)
                    });
                })
            })
        </script>
    {{/if}}
</main>
</body>
</html>